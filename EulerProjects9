using namespace std;


int main(){

int a,b,c,done=0;

for(a=1 ; a<=998 ; a++){
  for(b=1 ; b<=998 ; b++){
    for(c=1 ; c<=998 ; c++){
        if(a*a+b*b == c*c) {
          if(a + b + c == 1000){
            cout << "talen är: " << a << ", " << b << ", " << c << ". Produkten är: " << a*b*c;
            
            done = 1;
            break;
            }
        }
    
    }
  
  }
if(done){
  break;
}
}
return 0;
}
